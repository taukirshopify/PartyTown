            <p class="checkout-coupon top log a-an">
              <label for="RecoverEmail" class="l-contact">
                Email Address
                <em>*</em>
              </label>
              <input type="email" name="email" id="RecoverEmail">
            </p>

            <div class="forgot-password1">
              <a class="forgot-password" href="#" id="HideRecoverPasswordLink">Cancel</a>
            </div>
            <p class="login-submit5">
              <input class="button-primary" type="submit" value="submit">
            </p>    
          
        </div>
        {% endform %}
        
        
      </div>
      <div class="col-md-6">
        <div class="tb-login-form res">
          <h5 class="tb-title">Create a new account</h5>
          <p>Hello, Welcome your to account</p>

            <p class="checkout-coupon top log a-an">
              <label class="l-contact">
                Email Address
                <em>*</em>
              </label>
              <input type="email">
            </p>
            <p class="login-submit5">
              <a class="button-primary" href="/account/register">Sing in</a>
            </p>

          <div class="tb-info-login ">
            <h5 class="tb-title4">SignUp today and you'll be able to:</h5>
