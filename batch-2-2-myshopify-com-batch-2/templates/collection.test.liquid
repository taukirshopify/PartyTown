<section class="shop-area">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-lg-3 col-sm-12">
        {% include 'collection-sidebar' %}
      </div>
      <div class="col-md-8 col-lg-9 col-sm-12">
        <div class="row">
          <div class="col-md-12 col-sm-12 col-xs-12">
            
            {% assign pagination_limit = settings.pagination_limit_count %}
            
            {% paginate collection.products by pagination_limit %}
            
            <div class="features-tab">
              <!-- Nav tabs -->
              {% include 'collection-sorting' %}
              <!-- Tab panes -->
              <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="home">
                  <div class="row">
                    <div class="shop-tab">

                      {% for product in collection.products %}
                      <!-- single-product start -->
                      <div class="col-md-6 col-lg-4 col-sm-6">
                        {% include 'product-grid-item' %}
                      </div>
                      <!-- single-product end -->	
                      {% endfor %}
                    </div>
                  </div>
                </div>
              </div>
              <div class="shop-all-tab-nor">
                <div class="two-part">
                  <ul class="nav tabs" role="tablist">
                    <li title="{{ 'collections.general.grid_view' | t }}" class="change-view{% unless template contains 'list' %} change-view--active{% endunless %}" data-view="grid"><a href="#home" aria-controls="home" role="tab" data-toggle="tab"><i class="fa fa-th-large"></i></a></li>
                    <li title="{{ 'collections.general.list_view' | t }}" class="change-view{% if template contains 'list' %} change-view--active{% endif %}" data-view="list"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab"><i class="fa fa-align-justify"></i></a></li>
                  </ul>
                </div>

                {% if paginate.pages > 1 %}
                <hr>
                <div class="pagination">
                  {{ paginate | default_pagination | replace: '&laquo; Previous', '<' | replace: 'Next &raquo;', '>' }}
                </div>
                {% endif %}

              </div>
            </div>
            {% endpaginate %}
            
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>





{% comment %}

{% if paginate.pages > 1 %}
<hr>
<div class="pagination">
  {{ paginate | default_pagination | replace: '&laquo; Previous', '&larr;' | replace: 'Next &raquo;', '&rarr;' }}
</div>
{% endif %}



{% endcomment %}













